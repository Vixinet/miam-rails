<div class="well">
  <%= form_for(address, :html => { class: 'form-horizontal' }) do |f| %>
    <div class="form-group">
      <%= f.label :street, "Adresse *", class:"col-sm-3 control-label text-right" %>
      <div class="col-sm-6">
        <%= f.text_field :street, class:"form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :city, "Ville *", class:"col-sm-3 control-label text-right" %>
      <div class="col-sm-6">
        <%= f.text_field :city, class:"form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :comment, "Commentaire", class:"col-sm-3 control-label text-right" %>
      <div class="col-sm-6">
        <%= f.text_area :comment, rows: 3, class:"form-control", placeholder: "Exemple: code interphone, code d'entrée, étage, etc." %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-3"> </div>
      <div class="col-sm-6">
        <%= f.submit value: (address.persisted? ? "Editer" : "Ajouter"), class: 'btn btn-primary' %>
        <%= link_to "Annuler", addresses_url, class: 'btn btn-default' %>
      </div>
      <% if address.persisted? %>
        <div class="col-sm-3 text-right">
          <%= link_to (fa_icon 'trash 2x'), address, method: :delete, data: { confirm: 'Êtes vous certain?' } %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
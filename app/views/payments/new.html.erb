<h3>Ajouter une carte de crédit</h3>

<div class="well">
  <%= form_for(:payment, :url => '/payments', :method => 'post', :html => { :class => 'payments_new form-horizontal', :autocomplete => "on" }) do |f| %>
      
    <div class="form-group">
      <%= f.label :cc_number, "Numéro", class:"col-sm-6 col-sm-offset-3 control-label text-center text-left", placeholder: "xxxx xxxx xxxx xxxx" %>
    </div>
    <div class="form-group">
      <div class="col-sm-6 col-sm-offset-3">
        <%= 
          f.text_field :cc_number, 
            :class => "form-control", 
            :placeholder => "•••• •••• •••• ••••", 
            :type => 'tel', 
            :autocomplete => :cc_number
        %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :cc_exp, "Expiration", class:"col-sm-3 col-sm-offset-3 control-label text-left" %>
      <%= f.label :cc_cvc, "Code sécurité", class:"col-sm-3 control-label text-left" %>
    </div>

    <div class="form-group">
      <div class="col-sm-3 col-sm-offset-3">
        <%= 
          f.text_field :cc_exp, 
            :class => "form-control", 
            :placeholder => "•• / ••", 
            :type => 'tel', 
            :autocomplete => :cc_exp
        %>
      </div>
      <div class="col-sm-3">
        <%= 
          f.text_field :cc_cvc, 
            :class => "form-control", 
            :placeholder => "•••", 
            :type => 'tel', 
            :autocomplete => :off
        %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-3"> </div>
      <div class="col-sm-6 text-left">
        <%= f.submit value: "Ajouter", class: 'btn btn-primary' %>
        <%= link_to "Annuler", payments_url, class: 'btn btn-default' %>
      </div>
    </div>
  <% end %>
</div>
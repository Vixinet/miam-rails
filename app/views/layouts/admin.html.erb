<!doctype html>
<html>
  <head>
    <title>Miam</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body class="c-<%= params[:controller] %>">
    <nav class="navbar navbar-default navbar-static-top navbar-inverse" role="navigation">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/admin"><%= image_tag 'logo-white@0.25x.png', class: "logo"  %></a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li><%= link_to "Venues", admin_venues_url %></li>
            <li><%= link_to "Merchants", admin_merchants_url %></li>
            <li><%= link_to "Cities", admin_cities_url %></li>
            <li><%= link_to "Users", admin_users_url %></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
          <li class="dropdown-new">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">Create <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to 'Venue', new_admin_venue_path %></li>
              <li><%= link_to 'Merchant', new_admin_merchant_path %></li>
              <li><%= link_to 'City', new_admin_city_path %></li>
              <li><%= link_to 'User', new_admin_user_path %></li>
              <li role="separator" class="divider"></li>
              <li><a href="#">App User Actions</a></li>
            </ul>
          </li>
            <li><%= link_to "Exit", logout_url %></li>
          </ul>
        </div>
      </div>
    </nav>
    
    <main class="container-fluid">
      <%= yield %>
    </main>

    <%= render partial: 'layouts/handle_flashes' %>
  </body>
</html>

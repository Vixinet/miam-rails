<%= form_for [:admin, city], :html => { class: 'form-horizontal' } do |f| %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= city.persisted? ? 'Edit' : ' New' %> City</h3>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <%= f.label :status, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.select(:status , City.statuses.keys, {}, { :class => 'form-control' }) %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :label, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :label , class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :votes, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.number_field :votes , class: 'form-control' %>
        </div>
      </div>
    </div>
    <div class="panel-footer">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
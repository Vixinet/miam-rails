
<%= form_for [:admin, merchant], :html => { class: 'form-horizontal' } do |f| %>
  

  <h2>Merchant</h2>
  <div class="form-group">
    <%= f.label :status, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.select(:status , Merchant.statuses.keys, {}, { :class => 'form-control' }) %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name , class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :title, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :title , class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :price, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
    <%= f.select(:price , 1..4, {}, { :class => 'form-control' }) %>
    </div>
  </div>

  <h2>Contact info</h2>

  <div class="form-group">
    <%= f.label :email, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.email_field :email , class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :phone, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.telephone_field :phone , class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :website, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.url_field :website , class: 'form-control' %>
    </div>
  </div>

  <h2>Location</h2>

  <div class="form-group">
    <%= f.label :address, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :address , class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :city, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :city , class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :zipcode, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :zipcode , class: 'form-control' %>
    </div>
  </div>

  <h2>Personalized Pricing</h2>
  <p class="alert alert-info">Let field empty to autofill or reffil with default value</p>
  <div class="form-group">
    <%= f.label :delivery_cost, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.number_field :delivery_cost , class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :free_delivery_limit, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.number_field :free_delivery_limit , class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :small_order_surcharge, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.number_field :small_order_surcharge , class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :maximum_distance, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.number_field :maximum_distance , class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :long_delivery_surcharge, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.number_field :long_delivery_surcharge , class: 'form-control' %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
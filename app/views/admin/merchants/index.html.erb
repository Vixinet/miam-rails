<p id="notice"><%= notice %></p>

<h1>
  Merchants
  <%= link_to 'New Merchant', new_admin_merchant_path, class: 'btn btn-default'  %>
</h1>

<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th colspan="3">Name</th>
    </tr>
  </thead>
  <tbody>
    <% @merchants.each do |merchant| %>
      <tr>
        <td><%= merchant.id %></td>
        <td><%= merchant.name %></td>
        <td class="text-right">
          <%= link_to 'Edit', edit_admin_merchant_path(merchant), class: 'btn btn-default btn-xs' %>
          <%= link_to 'Show', admin_merchant_path(merchant), class: 'btn btn-primary btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="panel panel-default">
  <div class="panel-heading">Users</div>
  <table class="table">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Referral</th>
      <th>Stripe ID</th>
      <th>Orders</th>
      <th></th>
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= user.name %>
          <% if user.admin? %>
            <span class="label label-success">admin</span>
          <% end %>
        </td>
        <td><%= link_to user.email, "mailto:#{user.email}" %></td>
        <td><%= link_to user.phone, "tel:#{user.phone}" %></td>
        <td><%= user.invitation_code %></td>
        <td><%= user.stripe_id %></td>
        <td>?</td>
        <td class="text-right">
          <%= link_to 'Show', admin_user_path(user), class: "btn btn-xs btn-default" %>
          <%= link_to 'Edit', edit_admin_user_path(user), class: "btn btn-xs btn-primary" %>
        </td>
      </tr>
    <% end %>
  </table>
</div>

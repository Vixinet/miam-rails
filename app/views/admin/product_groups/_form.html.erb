<%= form_for product_group.persisted? ? [:admin, product_group] : [:admin, :venue, product_group], :html => { class: 'form-horizontal' } do |f| %>
<div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= product_group.persisted? ? 'Edit' : ' New' %> Product Group</h3>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <%= f.label :status, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.select(:status , ProductGroup.statuses.keys, {}, { :class => 'form-control' }) %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :label, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :label , class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :description, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :description , class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :order, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :order , class: 'form-control' %>
        </div>
      </div>
      <!--
      <div class="form-group">
        <%= f.label :venue_id, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%=f.collection_select( :venue_id, Venue.all, :id, :name, {:prompt => true }, class: 'form-control') %>
        </div>
      </div>
      -->
    </div>
    <div class="panel-footer">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>

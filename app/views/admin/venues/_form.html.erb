<%= form_for([:admin, venue], :html => { class: 'form-horizontal' }) do |f| %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= venue.persisted? ? 'Edit' : ' New' %> Venue</h3>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <%= f.label :status, class: 'col-sm-2 control-label' %> *
        <div class="col-sm-10">
          <%= f.select(:status , Venue.statuses.keys, {}, { :class => 'form-control' }) %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :name, class: 'col-sm-2 control-label' %> *
        <div class="col-sm-10">
          <%= f.text_field :name , class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :title, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :title , class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :phone, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :phone , class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :website, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :website , class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :merchant_id, class: 'col-sm-2 control-label' %> *
        <div class="col-sm-10">
          <%= f.collection_select( :merchant_id, Merchant.all, :id, :business_name, {:prompt => true }, class: 'form-control') %>
        </div>
      </div>
    </div>
    <div class="panel-footer">
      <%= f.submit class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
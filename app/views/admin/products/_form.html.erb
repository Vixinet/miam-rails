<%= form_for product.persisted? ? [:admin, product] : [:admin, :product_group, product], :html => { class: 'form-horizontal' } do |f| %>
<div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= product.persisted? ? 'Edit' : ' New' %> Product</h3>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <%= f.label :status, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.select(:status , ProductGroup.statuses.keys, {}, { :class => 'form-control' }) %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :label, class: 'col-sm-2 control-label' %> *
        <div class="col-sm-10">
          <%= f.text_field :label , class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :description, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :description , class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :order, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :order , class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :base_price, class: 'col-sm-2 control-label' %> *
        <div class="col-sm-10">
          <%= f.text_field :base_price , class: 'form-control' %>
        </div>
      </div>
    </div>
    <div class="panel-footer">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>